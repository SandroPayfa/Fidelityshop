{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center align-items-center" style="height:100vh;width:100%">
        <div class="col-md-6 col-sm-12">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">Connexion</h2>
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                    <form action="" method="post">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <div class="form-group">
                            <label for="inputEmail" class="sr-only">Login</label>
                            <input type="text" value="{{ last_email }}" name="email" id="inputEmail" class="form-control" placeholder="E-mail ou téléphone" required autofocus>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword" class="sr-only">Mot de passe</label>
                            <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Mot de passe" required>
                        </div>
                        <div class="checkbox mb-3">
                            <label><input type="checkbox" name="_remember_me" checked> Se souvenir de moi</label>
                            <a href="{{ url('begin_password_reset') }}" class=" float-right">Mot de passe oublié ?</a>
                        </div>
                        <a href="{{ url('register') }}" class="btn btn-default">Inscription</a>
                        
                        <button type="submit" id="sendlogin" class="btn btn-primary float-right">Connexion</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
